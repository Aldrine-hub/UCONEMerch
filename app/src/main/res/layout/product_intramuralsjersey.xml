<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EFE5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button and Title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Product Image -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="304dp"
            android:layout_height="315dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="#D6D6D6"
            android:scaleType="centerCrop"
            android:src="@drawable/jersey" />

        <!-- Dot Indicator -->


        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intramural Jersey"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <!-- Stock + Rating -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="203 available"
                android:textSize="12sp"
                android:background="@drawable/stock_tag"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/star"
                android:layout_marginStart="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0 (150 reviews)"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mlbb intramurals jersey"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp" />

        <!-- Size Options -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView style="@style/SizeChip" android:text="S"/>
            <TextView style="@style/SizeChip" android:text="M"/>
            <TextView style="@style/SizeChip" android:text="L"/>
            <TextView style="@style/SizeChip" android:text="XL"/>
        </LinearLayout>

        <!-- Quantity and Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="-"
                    android:backgroundTint="#000000"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/quantityText"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="+"
                    android:backgroundTint="#000000"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚± 500"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Add to Cart -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Add to Cart"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
